<div class="container">
  <h1>My tasks</h1>

  <% @tasks.each do |task| %>
    <li>
      <input type="checkbox" <%= "checked" if task.completed %>>
      <%= link_to task.title, task_path(task) %>

      <%= link_to task_path(task),
          data: {
            turbo_method: :delete,
            turbo_confirm: "Delete \"#{task.title}\"?"
          } do %>
          <i class="fa-solid fa-trash-can"></i>
      <% end %>
    </li>
  <% end %>

  <hr>

  <%= link_to new_task_path do %>
    <i class="fa-solid fa-plus"></i> Add new task
  <% end %>
</div>
